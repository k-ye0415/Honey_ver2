<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:gravity="center"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_cart_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_cart_list_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_cart_ingredient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                />
            <TextView
                android:id="@+id/tv_cart_ingredient_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="detail"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/ib_cart_ingredient_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/et_cart_ingredient_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageButton
                    android:id="@+id/ib_cart_ingredient_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/tv_cart_ingredient_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="total Price"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>