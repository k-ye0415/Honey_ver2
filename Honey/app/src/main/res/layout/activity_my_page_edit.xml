<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyPageEditActivity"
    android:padding="20dp">

    <EditText
        android:id="@+id/et_my_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디"
        />
    <EditText
        android:id="@+id/et_my_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        />
    <EditText
        android:id="@+id/et_my_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름"
        />
    <EditText
        android:id="@+id/et_my_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="전화번호"
        />
    <EditText
        android:id="@+id/et_my_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="주소"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_my_addr_detail"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="상세주조"
            />
        <Button
            android:id="@+id/btn_edit_addr_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_addr" />
    </LinearLayout>
    <EditText
        android:id="@+id/et_my_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일"
        />
    <Button
        android:id="@+id/btn_my_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수정"
        />
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        />

</LinearLayout>