<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BuyResultActivity"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매 내역"
        />
    <TextView
        android:id="@+id/tv_buy_result_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="result"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="받는 주소"
        />
    <TextView
        android:id="@+id/tv_buy_result_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="result"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="요청 사항"
        />
    <TextView
        android:id="@+id/tv_buy_result_req"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="result"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문 금액"
            />
        <TextView
            android:id="@+id/tv_buy_result_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="result"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배달 팁"
            />
        <TextView
            android:id="@+id/tv_buy_result_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="result"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 결제금액"
            />
        <TextView
            android:id="@+id/tv_buy_result_price_tot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="result"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_go_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문상세보기"
            />
        <Button
            android:id="@+id/btn_go_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쇼핑하러가기"
            />
    </LinearLayout>

</LinearLayout>