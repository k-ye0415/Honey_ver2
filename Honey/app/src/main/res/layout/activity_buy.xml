<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BuyActivity"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배송정보"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/et_buy_addr"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="주소"
                />
            <Button
                android:id="@+id/btn_buy_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/et_buy_addr_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="상세 주소"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요청사항"
            />
        <EditText
            android:id="@+id/et_buy_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제수단"
            />
        <RadioGroup
            android:id="@+id/rg_buy_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:id="@+id/rb_buy_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="카드결제"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/rb_buy_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="무통장 입금"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="주문 금액"
                />
            <TextView
                android:id="@+id/tv_buy_price_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12,333원"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="배달팁"
                />
            <TextView
                android:id="@+id/tv_buy_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,333원"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="총 결제금액"
                />
            <TextView
                android:id="@+id/tv_buy_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12,333원"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_go_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제하기"
        />

</LinearLayout>